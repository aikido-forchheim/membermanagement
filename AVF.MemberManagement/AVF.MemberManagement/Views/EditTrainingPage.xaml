<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms" prism:ViewModelLocator.AutowireViewModel="True" x:Class="AVF.MemberManagement.Views.EditTrainingPage" Title="{Binding Title}">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <StackLayout WidthRequest="256" Margin="0,0,0,0">
            <Label Text="Trainer:" FontAttributes="Bold">
            </Label>
            <Button Text="Max Mustermann">
            </Button>
        </StackLayout>
        <StackLayout WidthRequest="256" Margin="0,0,0,0">
            <Label Text="Kotrainer 1:">
            </Label>
            <Button Text="- keiner -">
            </Button>
        </StackLayout>
        <StackLayout WidthRequest="256" Margin="0,0,0,0">
            <Label Text="Kotrainer 2:">
            </Label>
            <Button Text="- keiner -">
            </Button>
        </StackLayout>
        <StackLayout WidthRequest="256" Margin="0,0,0,0">
            <Label Text="Bemerkung:" Margin="0,0,0,16">
            </Label>
            <Editor Text="{Binding Annotation}" HeightRequest="64">
            </Editor>
        </StackLayout>
        <Button Text="Weiter" WidthRequest="256" Command="{Binding EnterParticipantsCommand}">
        </Button>
    </StackLayout>
</ContentPage>