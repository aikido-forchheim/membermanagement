<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:userControls="clr-namespace:AVF.MemberManagement.UserControls;assembly=AVF.MemberManagement"
             prism:ViewModelLocator.AutowireViewModel="True" x:Class="AVF.MemberManagement.Views.KursSelectionPage">
    <ScrollView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*">
                </RowDefinition>
                <RowDefinition Height="1*">
                </RowDefinition>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="640" Margin="16,0,16,0">
                <Grid Margin="8,8,8,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                        <ColumnDefinition Width="1*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <userControls:BigLabel Grid.Column="0" FontAttributes="Bold" HorizontalOptions="Start" Text="Uhrzeit" />
                    <userControls:BigLabel Grid.Column="1" FontAttributes="Bold" HorizontalOptions="Start" Text="Ãœbungsleiter" />
                    <userControls:BigLabel Grid.Column="2" FontAttributes="Bold" HorizontalOptions="End" Text="Teilnehmer" />
                </Grid>
                <ListView ItemsSource="{Binding Trainings}" HeightRequest="196" SelectedItem="{Binding SelectedTraining}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid Margin="8,8,8,8">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                        <ColumnDefinition Width="1*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                                        <userControls:BigLabel Text="{Binding Class.Time}" />
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal" HorizontalOptions="Start" Grid.Column="1">
                                        <userControls:BigLabel Text="{Binding Class.Trainer.Vorname}">
                                        </userControls:BigLabel>
                                        <userControls:BigLabel Text="{Binding Class.Trainer.Nachname}">
                                        </userControls:BigLabel>
                                    </StackLayout>

                                    <StackLayout Orientation="Horizontal" HorizontalOptions="End" Grid.Column="2">
                                        <userControls:BigLabel Text="(">
                                        </userControls:BigLabel>
                                        <userControls:BigLabel Text="{Binding Participations.Count}">
                                        </userControls:BigLabel>
                                        <userControls:BigLabel Text=")">
                                        </userControls:BigLabel>
                                    </StackLayout>
                                </Grid>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
            <StackLayout Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center">
                <Button Text="Teilnehmer eintragen" WidthRequest="256" Command="{Binding EnterParticipantsCommand}">
                </Button>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>