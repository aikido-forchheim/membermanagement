<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="AVF.CourseParticipation.Views.TrainingEditPage" Title="Training editieren">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style x:Key="EditButtonStyle" TargetType="View">
                <Setter Property="Margin" Value="8"></Setter>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout>
        <StackLayout HorizontalOptions="Center" Margin="8">
            <Label Text="11. Dezember 2018" FontSize="Large" HorizontalOptions="Center"></Label>
            <Label Text="17:30-19:00" FontSize="Medium" HorizontalOptions="Center"></Label>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Label Text="Trainer:" FontAttributes="Bold"></Label>
                <Label Text="Julia Vilkova"></Label>
                <Label Text="Markus Malz"></Label>
            </StackLayout>
            <Button Text="Trainer ändern" Style="{StaticResource EditButtonStyle}"></Button>
            <Button Text="Notiz hinzufügen" Style="{StaticResource EditButtonStyle}"></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>