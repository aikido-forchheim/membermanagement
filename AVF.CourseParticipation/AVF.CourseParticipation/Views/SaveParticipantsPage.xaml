<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="AVF.CourseParticipation.Views.SaveParticipantsPage">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Neue Teilnehmer: "></Label>
        <Label Text="Gelöschte Teilnehmer: "></Label>
        <Button Text="Speichern" Command="{Binding SaveCommand}" Style="{StaticResource MainButtonStyle}"></Button>
        <Button Text="Änderungen verwerfen" Command="{Binding CancelCommand}" Style="{StaticResource MainButtonStyle}"></Button>
        <Button Text="Zurück zum Bearbeiten" Command="{Binding BackCommand}" Style="{StaticResource MainButtonStyle}"></Button>
    </StackLayout>
</ContentPage>
    