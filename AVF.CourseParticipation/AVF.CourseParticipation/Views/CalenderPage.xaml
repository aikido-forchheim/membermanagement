<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             xmlns:cal="clr-namespace:XamForms.Controls;assembly=XamForms.Controls.Calendar"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="AVF.CourseParticipation.Views.CalenderPage" Title="Kalender" Padding="6">
    <StackLayout>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
            <cal:Calendar SelectedDate="{Binding SelectedDate}" WidthRequest="340" SelectedBackgroundColor="{StaticResource Sun}" SelectedBorderColor="{StaticResource Torii}"></cal:Calendar>
            <Button Text="Heute" Margin="0,0,0,0" Command="{Binding SetTodayCommand}" ></Button>
            <Button Text="Weiter" Margin="0,16,0,0" Command="{Binding SelectCourseCommand}" ></Button>
        </StackLayout>
    </StackLayout>
</ContentPage>